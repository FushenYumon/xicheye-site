<!DOCTYPE html>
<html lang="zh-CN">
<head>
  <meta charset="utf-8" />
  <title>{{ title }}</title>
  <meta name="viewport" content="width=device-width, initial-scale=1" />

  <style>
    :root {
      color-scheme: dark;
    }

    * {
      box-sizing: border-box;
    }

    /* â€”â€” é€šç”¨èƒŒæ™¯ï¼šäº‘å…‰ + å¤œè‰² â€”â€” */
    body {
      margin: 0;
      font-family: "Noto Serif SC", "Source Han Serif SC", "Songti SC",
        -apple-system, BlinkMacSystemFont, system-ui, "SF Pro Text", "Segoe UI",
        sans-serif;
      background:
        radial-gradient(circle at 20% 0%, rgba(129, 140, 248, 0.24) 0, transparent 55%),
        radial-gradient(circle at 80% 100%, rgba(56, 189, 248, 0.18) 0, transparent 60%),
        radial-gradient(circle at top, #111827 0, #020617 55%);
      color: #f5f5f5;
    }

    /* â€”â€” é¡µé¢æ·¡å…¥åŠ¨ç”» â€”â€” */
    .page-fade {
      animation: pageFadeIn 650ms ease-out both;
    }

    @keyframes pageFadeIn {
      from {
        opacity: 0;
        transform: translateY(8px);
        filter: blur(2px);
      }
      to {
        opacity: 1;
        transform: translateY(0);
        filter: blur(0);
      }
    }

    .fiction-page {
      min-height: 100vh;
      max-width: 880px;
      margin: 0 auto;
      padding: 32px 20px 64px;
    }

    .fiction-header {
      margin-bottom: 18px;
    }

    .fiction-back {
      font-size: 14px;
      color: #aab3ff;
      text-decoration: none;
    }

    .fiction-back:hover {
      text-decoration: underline;
    }

    .fiction-title {
      margin: 10px 0 6px;
      font-size: 30px;
      font-weight: 650;
      letter-spacing: 0.03em;
    }

    .fiction-meta {
      font-size: 13px;
      color: #9ca3af;
    }

    .fiction-hero {
      margin: 26px 0 18px;
      border-radius: 18px;
      overflow: hidden;
      box-shadow: 0 22px 40px rgba(0, 0, 0, 0.55);
    }

    .fiction-hero img {
      display: block;
      width: 100%;
      height: auto;
    }

    /* â€”â€” æ­£æ–‡æ’ç‰ˆ â€”â€” */

    .fiction-body {
      margin-top: 24px;
      max-width: 720px;
      font-family:
        "Songti SC",
        "STSong",
        "SimSun",
        "Noto Serif CJK SC",
        "Source Han Serif SC",
        "Times New Roman",
        serif;
      font-size: 17px;
      line-height: 1.9;
      letter-spacing: 0.02em;
    }

    .fiction-body p {
      margin: 0 0 1.2em;
      text-indent: 2em;
    }

    .fiction-body p:last-child {
      margin-bottom: 0;
    }

    .fiction-body ul,
    .fiction-body ol,
    .fiction-body blockquote {
      margin: 0 0 1.2em 0;
      padding-left: 2em;
      text-indent: 0;
    }

    /* â€”â€” åœºæ™¯å—ç»„ä»¶ â€”â€” */

    .scene-block {
      margin-top: 32px;
      margin-bottom: 32px;
      padding: 20px;
      border-radius: 20px;
      background: radial-gradient(
        circle at top left,
        rgba(148, 163, 253, 0.16),
        rgba(15, 23, 42, 0.95)
      );
      display: grid;
      grid-template-columns: minmax(0, 1.2fr) minmax(0, 2fr);
      gap: 20px;
      align-items: stretch;
      box-shadow: 0 18px 40px rgba(0, 0, 0, 0.55);
    }

    @media (max-width: 768px) {
      .scene-block {
        grid-template-columns: minmax(0, 1fr);
      }
    }

    .scene-media img {
      width: 100%;
      height: 100%;
      object-fit: cover;
      border-radius: 16px;
      display: block;
      background: #020617;
    }

    .scene-text {
      display: flex;
      flex-direction: column;
      gap: 12px;
    }

    .scene-tag {
      display: inline-flex;
      align-self: flex-start;
      padding: 4px 10px;
      border-radius: 999px;
      font-size: 11px;
      letter-spacing: 0.12em;
      text-transform: uppercase;
      background: rgba(148, 163, 253, 0.18);
      color: #c7d2fe;
    }

    .scene-body {
      font-size: 15px;
      line-height: 1.8;
      color: #e5e7eb;
    }

    .scene-body p {
      margin: 0 0 0.7em;
      text-indent: 0;
    }

    .scene-body p:last-child {
      margin-bottom: 0;
    }

    /* â€”â€” æ•´ç¯‡å°è¯´ BGM å—ï¼ˆå¯é€‰ï¼Œç”¨äºæ˜¾ç¤ºæ’­æ”¾å™¨çš„é‚£ç§ï¼‰ â€”â€” */

    .fiction-audio {
      margin-top: 28px;
      max-width: 720px;
      padding: 14px 18px;
      border-radius: 16px;
      background: rgba(15, 23, 42, 0.9);
      display: flex;
      flex-direction: column;
      gap: 8px;
    }

    .fiction-audio-label {
      font-size: 14px;
      color: #cbd5f5;
    }

    audio {
      width: 100%;
    }

    /* â€”â€” å³ä¸‹è§’çš„å°éŸ³é‡å¼€å…³ â€”â€” */

    .bgm-toggle {
      position: fixed;
      right: 20px;
      bottom: 24px;
      z-index: 40;
      border: none;
      border-radius: 999px;
      padding: 8px 14px;
      font-size: 13px;
      background: rgba(15, 23, 42, 0.85);
      color: #e5e7eb;
      box-shadow: 0 12px 30px rgba(0, 0, 0, 0.6);
      cursor: pointer;
      display: flex;
      align-items: center;
      gap: 6px;
      backdrop-filter: blur(10px);
    }

    .bgm-toggle[hidden] {
      display: none;
    }
  </style>
</head>
<body>
  <main class="fiction-page page-fade">
    <header class="fiction-header">
      <a href="/fiction/" class="fiction-back">â† è¿”å›å°è¯´åˆ—è¡¨</a>
      <h1 class="fiction-title">{{ title }}</h1>
      <p class="fiction-meta">
        {{ page.date | date("yyyy-MM-dd") }}
      </p>
    </header>

    {% if cover %}
    <figure class="fiction-hero">
      <img src="{{ cover }}" alt="{{ title }} å°é¢å›¾" />
    </figure>
    {% endif %}

    <section class="fiction-body">
      {{ content | safe }}
    </section>

    {% if audio %}
    <section class="fiction-audio">
      <div class="fiction-audio-label">èƒŒæ™¯éŸ³ä¹</div>
      <audio controls preload="none">
        <source src="{{ audio }}" type="audio/mpeg" />
        ä½ çš„æµè§ˆå™¨ä¸æ”¯æŒéŸ³é¢‘æ’­æ”¾ã€‚
      </audio>
    </section>
    {% endif %}
  </main>

  <!-- â€”â€” åœºæ™¯è‡ªåŠ¨ BGM è„šæœ¬ â€”â€” -->
  <script>
    (function () {
      const sections = document.querySelectorAll('.scene-block[data-scene-bgm]');
      if (!sections.length) return;

      const audio = new Audio();
      audio.loop = true;
      let currentSrc = null;
      let userEnabled = false;

      // åˆ›å»ºå³ä¸‹è§’æŒ‰é’®
      const btn = document.createElement('button');
      btn.className = 'bgm-toggle';
      btn.textContent = 'ğŸ”‡ å¼€å¯åœºæ™¯éŸ³ä¹';
      document.body.appendChild(btn);

      function updateButton() {
        btn.textContent = userEnabled ? 'ğŸ”Š åœºæ™¯éŸ³ä¹å·²å¼€' : 'ğŸ”‡ å¼€å¯åœºæ™¯éŸ³ä¹';
      }

      btn.addEventListener('click', async () => {
        userEnabled = !userEnabled;
        updateButton();

        if (!userEnabled) {
          audio.pause();
          return;
        }

        // å¼€å¯æ—¶ï¼Œæ‰¾ä¸€ä¸‹å½“å‰è§†å£ä¸­æœ€ä¸­å¿ƒçš„åœºæ™¯
        const visible = Array.from(sections).filter((sec) => {
          const rect = sec.getBoundingClientRect();
          const vh = window.innerHeight || document.documentElement.clientHeight;
          const visibleHeight = Math.min(rect.bottom, vh) - Math.max(rect.top, 0);
          return visibleHeight > rect.height * 0.5;
        });

        if (visible.length) {
          const sec = visible[0];
          const src = sec.getAttribute('data-scene-bgm');
          if (src && src !== currentSrc) {
            currentSrc = src;
            audio.src = src;
          }
          try {
            await audio.play();
          } catch (e) {
            console.warn('æ— æ³•æ’­æ”¾ BGMï¼š', e);
          }
        }
      });

      updateButton();

      const observer = new IntersectionObserver(
        async (entries) => {
          if (!userEnabled) return;

          for (const entry of entries) {
            if (!entry.isIntersecting) continue;

            const sec = entry.target;
            const src = sec.getAttribute('data-scene-bgm');
            if (!src) continue;

            if (src !== currentSrc) {
              currentSrc = src;
              audio.src = src;
            }
            try {
              await audio.play();
            } catch (e) {
              console.warn('æ— æ³•æ’­æ”¾ BGMï¼š', e);
            }
          }
        },
        {
          threshold: 0.6,
        }
      );

      sections.forEach((sec) => observer.observe(sec));
    })();
  </script>
</body>
</html>
