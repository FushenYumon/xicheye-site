<!DOCTYPE html>
<html lang="zh-CN">
<head>
  <meta charset="utf-8" />
  <title>{{ title }}</title>
  <meta name="viewport" content="width=device-width, initial-scale=1" />

  <style>
    :root {
      color-scheme: dark;
    }

    * {
      box-sizing: border-box;
    }

    /* —— 通用背景：云光 + 夜色 —— */
    body {
      margin: 0;
      font-family: "Noto Serif SC", "Source Han Serif SC", "Songti SC",
        -apple-system, BlinkMacSystemFont, system-ui, "SF Pro Text", "Segoe UI",
        sans-serif;
      background:
        radial-gradient(circle at 20% 0%, rgba(129, 140, 248, 0.24) 0, transparent 55%),
        radial-gradient(circle at 80% 100%, rgba(56, 189, 248, 0.18) 0, transparent 60%),
        radial-gradient(circle at top, #111827 0, #020617 55%);
      color: #f5f5f5;
    }

    /* —— 页面淡入动画 —— */
    .page-fade {
      animation: pageFadeIn 650ms ease-out both;
    }

    @keyframes pageFadeIn {
      from {
        opacity: 0;
        transform: translateY(8px);
        filter: blur(2px);
      }
      to {
        opacity: 1;
        transform: translateY(0);
        filter: blur(0);
      }
    }

    .fiction-page {
      min-height: 100vh;
      max-width: 880px;
      margin: 0 auto;
      padding: 32px 20px 64px;
    }

    .fiction-header {
      margin-bottom: 18px;
    }

    .fiction-back {
      font-size: 14px;
      color: #aab3ff;
      text-decoration: none;
    }

    .fiction-back:hover {
      text-decoration: underline;
    }

    .fiction-title {
      margin: 10px 0 6px;
      font-size: 30px;
      font-weight: 650;
      letter-spacing: 0.03em;
    }

    .fiction-meta {
      font-size: 13px;
      color: #9ca3af;
    }

    .fiction-hero {
      margin: 26px 0 18px;
      border-radius: 18px;
      overflow: hidden;
      box-shadow: 0 22px 40px rgba(0, 0, 0, 0.55);
    }

    .fiction-hero img {
      display: block;
      width: 100%;
      height: auto;
    }

    /* —— 正文排版 —— */
    .fiction-body {
      margin-top: 24px;
      max-width: 720px;
      font-family:
        "Songti SC",
        "STSong",
        "SimSun",
        "Noto Serif CJK SC",
        "Source Han Serif SC",
        "Times New Roman",
        serif;
      font-size: 17px;
      line-height: 1.9;
      letter-spacing: 0.02em;
    }

    .fiction-body p {
      margin: 0 0 1.2em;
      text-indent: 2em;
    }

    .fiction-body p:last-child {
      margin-bottom: 0;
    }

    .fiction-body ul,
    .fiction-body ol,
    .fiction-body blockquote {
      margin: 0 0 1.2em 0;
      padding-left: 2em;
      text-indent: 0;
    }

    /* —— 场景块组件 —— */
    .scene-block {
      margin-top: 32px;
      margin-bottom: 32px;
      padding: 20px;
      border-radius: 20px;
      background: radial-gradient(
        circle at top left,
        rgba(148, 163, 253, 0.16),
        rgba(15, 23, 42, 0.95)
      );
      display: grid;
      grid-template-columns: minmax(0, 1.2fr) minmax(0, 2fr);
      gap: 20px;
      align-items: stretch;
      box-shadow: 0 18px 40px rgba(0, 0, 0, 0.55);
    }

    @media (max-width: 768px) {
      .scene-block {
        grid-template-columns: minmax(0, 1fr);
      }
    }

    .scene-media img {
      width: 100%;
      height: 100%;
      object-fit: cover;
      border-radius: 16px;
      display: block;
      background: #020617;
    }

    .scene-text {
      display: flex;
      flex-direction: column;
      gap: 12px;
    }

    .scene-tag {
      display: inline-flex;
      align-self: flex-start;
      padding: 4px 10px;
      border-radius: 999px;
      font-size: 11px;
      letter-spacing: 0.12em;
      text-transform: uppercase;
      background: rgba(148, 163, 253, 0.18);
      color: #c7d2fe;
    }

    .scene-body {
      font-size: 15px;
      line-height: 1.8;
      color: #e5e7eb;
    }

    .scene-body p {
      margin: 0 0 0.7em;
      text-indent: 0;
    }

    .scene-body p:last-child {
      margin-bottom: 0;
    }

    /* —— 整篇小说 BGM 块（可选，可见播放器） —— */
    .fiction-audio {
      margin-top: 28px;
      max-width: 720px;
      padding: 14px 18px;
      border-radius: 16px;
      background: rgba(15, 23, 42, 0.9);
      display: flex;
      flex-direction: column;
      gap: 8px;
    }

    .fiction-audio-label {
      font-size: 14px;
      color: #cbd5f5;
    }

    audio {
      width: 100%;
    }
  </style>
</head>
<body>
  <main class="fiction-page page-fade">
    <header class="fiction-header">
      <a href="/fiction/" class="fiction-back">← 返回小说列表</a>
      <h1 class="fiction-title">{{ title }}</h1>
      <p class="fiction-meta">
        {{ page.date | date("yyyy-MM-dd") }}
      </p>
    </header>

    {% if cover %}
    <figure class="fiction-hero">
      <img src="{{ cover }}" alt="{{ title }} 封面图" />
    </figure>
    {% endif %}

    <section class="fiction-body">
      {{ content | safe }}
    </section>

    {% if audio %}
    <section class="fiction-audio">
      <div class="fiction-audio-label">背景音乐</div>
      <audio controls preload="none">
        <source src="{{ audio }}" type="audio/mpeg" />
        你的浏览器不支持音频播放。
      </audio>
    </section>
    {% endif %}
  </main>

  <!-- 场景自动 BGM 脚本 -->
  <script>
    (function () {
      // 找出所有带 data-scene-bgm 的场景块
      const scenes = Array.from(
        document.querySelectorAll('.scene-block[data-scene-bgm]')
      );
      if (!scenes.length) return;

      // 单一隐藏 Audio 对象，负责所有场景 BGM
      const sceneAudio = new Audio();
      sceneAudio.preload = 'none';
      sceneAudio.volume = 0.75;

      let userInteracted = false;
      let currentScene = null;

      function enableAudioOnce() {
        userInteracted = true;
        document.removeEventListener('click', enableAudioOnce);
        document.removeEventListener('keydown', enableAudioOnce);
      }

      // 第一次点击 / 按键后，浏览器才允许播放
      document.addEventListener('click', enableAudioOnce);
      document.addEventListener('keydown', enableAudioOnce);

      function playForScene(scene) {
        if (!userInteracted) return;
        const src = scene.getAttribute('data-scene-bgm');
        if (!src) return;

        // 如果已经是当前场景并且在播，就不重复
        if (scene === currentScene && !sceneAudio.paused) return;

        const absoluteSrc = new URL(src, window.location.href).href;
        if (sceneAudio.src !== absoluteSrc) {
          sceneAudio.src = absoluteSrc;
        }

        sceneAudio.play().then(() => {
          currentScene = scene;
        }).catch(() => {
          // 被浏览器拦截就悄悄失败，不报错
        });
      }

      function handleSceneLeave(scene) {
        if (scene === currentScene) {
          sceneAudio.pause();
          currentScene = null;
        }
      }

      if (!('IntersectionObserver' in window)) {
        // 太老的浏览器就不做自动播放了
        return;
      }

      const observer = new IntersectionObserver(
        (entries) => {
          entries.forEach((entry) => {
            const scene = entry.target;
            if (entry.isIntersecting && entry.intersectionRatio >= 0.6) {
              // 这个场景在视口里占比超过 60%
              playForScene(scene);
            } else {
              handleSceneLeave(scene);
            }
          });
        },
        {
          threshold: [0.3, 0.6],
        }
      );

      scenes.forEach((scene) => observer.observe(scene));
    })();
  </script>
</body>
</html>
